{
  "name": "@flint-note/server",
  "version": "0.1.2",
  "description": "Agent-first note-taking application with MCP server",
  "main": "dist/server.js",
  "bin": {
    "@flint-note/server": "dist/server.js",
    "flint-note": "dist/cli.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc && chmod +x dist/cli.js && chmod +x dist/server.js",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "start": "npm run build && node dist/server.js",
    "start:prod": "node dist/server.js",
    "dev": "tsx --watch src/server.ts",
    "cli": "tsx src/cli.ts",
    "cli:prod": "node dist/cli.js",
    "test": "tsx --test test/**/*.test.ts",
    "test:unit": "tsx --test test/unit/**/*.test.ts",
    "test:integration": "tsx --test test/integration/**/*.test.ts",
    "lint": "eslint src/ test/",
    "format": "prettier --write src/**/*.ts test/**/*.ts",
    "type-check": "tsc --project tsconfig.dev.json --noEmit",
    "inspector": "DANGEROUSLY_OMIT_AUTH=true npx @modelcontextprotocol/inspector tsx src/server.ts",
    "prepublish": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "notes",
    "mcp",
    "ai",
    "agent",
    "knowledge-management"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "prompts"
  ],
  "author": "Tim Disney",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "prettier": "^3.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
